{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "ES2015"
    ],
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ],
    "paths": {
      "~/test/*": [
        "test/*"
      ],
      "~/*": [
        "src/*"
      ]
    }
  }
}